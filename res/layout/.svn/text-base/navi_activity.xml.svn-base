<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/naviact_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- The sliding menu items, you can put a listview instead -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dip"
        android:layout_marginTop="8dip"
        android:background="@android:color/white"
        android:fadingEdge="none" >

        <LinearLayout
            android:id="@+id/navipanel_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:splitMotionEvents="false" >

            <TextView
                android:id="@+id/nav_about_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:padding="15dip"
                android:text="@string/nav_about"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/nav_main_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:padding="15dip"
                android:text="@string/nav_main"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/nav_search_partner_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:padding="15dip"
                android:text="@string/nav_search"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/nav_routerbox_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:padding="15dip"
                android:text="@string/nav_router_box"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/nav_routershop_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:padding="15dip"
                android:text="@string/nav_shop"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/nav_logout_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:padding="15dip"
                android:text="@string/nav_logout"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

    <!--
    This is for rounded corner menu list 
