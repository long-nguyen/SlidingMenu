package com.kayac.canary.ui.fragments;

import android.app.Activity;
import android.os.Bundle;
import android.support.v4.app.Fragment;
import android.view.LayoutInflater;
import android.view.View;
import android.view.View.OnClickListener;
import android.view.ViewGroup;

import com.kayac.canary.R;
import com.kayac.canary.ui.activities.NaviActivity;
import com.kayac.canary.ui.activities.NaviActivity.onReceiveMessageInterface;
import com.kayac.canary.ui.activities.NaviActivity.onReplacePanelInterface;

public class NVMainFragment extends Fragment implements OnClickListener,onReplacePanelInterface{
	public static final String TAG=NVMainFragment.class.getSimpleName();
	public static boolean DEBUG =false;
	private onReceiveMessageInterface msgCallback;

	public NVMainFragment() {
	}

	@Override
	public View onCreateView(LayoutInflater inflater, ViewGroup container,
			Bundle savedInstanceState) {
		View v=inflater.inflate(R.layout.navi_main_fragment, container,false);
		initView(v);
		return v;
	}
	
	
	private void initView(View v) {
		setupTitleBar(v);
	}

	private void setupTitleBar(View v){
		v.findViewById(R.id.title_right_bt).setOnClickListener(this);
	}
	
	@Override
	public void onAttach(Activity act) {
		super.onAttach(act);
		try {
			msgCallback = ((NaviActivity) getActivity()).msgReceivedListener;
		} catch (ClassCastException e) {
			e.printStackTrace();
		}
	}
	
	@Override
	public void onClick(View v) {
		switch (v.getId()) {
		case R.id.title_right_bt:
			msgCallback.onReceiveMessage(R.msg.msg_open_navi_panel);
			break;
		default:
			break;
		}
	}
	
	@Override
	public void onReplacePanelCallback() {
	}
}
